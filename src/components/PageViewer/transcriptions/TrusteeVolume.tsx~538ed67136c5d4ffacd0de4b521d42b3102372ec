import { useEffect, useRef, useState } from "react";
import { Link, useParams, useLocation } from "react-router-dom";
import { PageNumberOffsetsContexts } from "../../../Contexts";
import "../../../styles/PageViewer/Transcription.scss";
import PageNumber from "./PageNumber";

const Transcription = () => {
  const page = useParams().page || '1';
  const { hash } = useLocation();
  const scrollToAnchor = (hash) ? hash.replace('#', '') : null;

  // pageNum is stored in state and updated when any necessary scrolling has finished
  const [pageNum, setPageNum] = useState(0);
  // this is set to true if the element if scrollIntoView is necessary in the effect below. It's passed to PageNumber components to prevent them from navigating to a new page until the scroll here is complete.
  const [isAutoScrolling, setIsAutoScrolling] = useState(false);
  const ref = useRef<HTMLDivElement>(null);

  //when the page number changes, scroll to the page on the transcription
  useEffect(() => {
    if (parseInt(page) !== pageNum && !scrollToAnchor) {
      const element = document.getElementById(`page-${page}`);
      const transcriptionContainer = ref.current;
      if (element && transcriptionContainer) {
        element.scrollIntoView();
        let scrollTimeout: any;
        setIsAutoScrolling(true);
        const onScroll = (e: any) => {
          clearTimeout(scrollTimeout);
          scrollTimeout = setTimeout(function () {
            setPageNum(parseInt(page));
            setIsAutoScrolling(false);
          }, 100);
        };
        transcriptionContainer.addEventListener('scroll', onScroll);
        return () => { transcriptionContainer.removeEventListener('scroll', onScroll); }
      }
    }
  }, [page, pageNum, scrollToAnchor]);

  //when the page number changes, scroll to the page on the transcription
  useEffect(() => {
    if (scrollToAnchor) {
      const element = document.getElementById(scrollToAnchor);
      const transcriptionContainer = ref.current;
      if (element && transcriptionContainer) {
        element.scrollIntoView();
        let scrollTimeout: any;
        setIsAutoScrolling(true);
        const onScroll = (e: any) => {
          clearTimeout(scrollTimeout);
          scrollTimeout = setTimeout(function () {
            setPageNum(parseInt(page));
            setIsAutoScrolling(false);
          }, 100);
        };
        transcriptionContainer.addEventListener('scroll', onScroll);
        return () => { transcriptionContainer.removeEventListener('scroll', onScroll); }
      }
    }
  }, [page, pageNum, scrollToAnchor]);

  // useEffect(() => {
  //   const transcriptionContainer = ref.current;
  //   if (transcriptionContainer) {
  //     const onBlur = (e: any) => {
  //       console.log('blur');
  //       setIsAutoScrolling(true);
  //     };
  //     transcriptionContainer.addEventListener('blur', onBlur );
  //     const onFocus = (e: any) => {
  //       console.log('focus');
  //       setIsAutoScrolling(false);
  //     };
  //     transcriptionContainer.addEventListener('focus', onFocus);
  //     return () => { transcriptionContainer.removeEventListener('blur', onBlur); transcriptionContainer.removeEventListener('blur', onFocus); }
  //   }
  // }, []);


  return (
    <PageNumberOffsetsContexts.Provider value={{ isAutoScrolling, activePage: pageNum }}>
      <div className="transcription" id="transcription" ref={ref} tabIndex={0}>
        <PageNumber num={1} />
        <section>
          <h3 style={{ textAlign: "center" }}>
            Charter
            <br />
            of
            <br />
            <span style={{ textDecoration: "underline" }}>Richmond College</span>
          </h3>
          <h5 style={{ textAlign: "center" }}>Passed. March 5th 1840</h5>
          <div className="later_internal_reference">
            <Link to={`../215`}>New Charter 215</Link>
          </div>
          <ol style={{ listStylePosition: "inside" }}>
            <li className="first">
              Be it enacted by the General Assembly, <aside>Location</aside>That there be and is hereby
              established, at or near the City of Richmond, a seminary of learning
              <aside>Purpose</aside> for the instruction of youth in the various branches of science and
              literature, the useful arts, and the learned and foreign languages, <aside>name</aside>
              which shall be called and known by the name of Richmond College.
            </li>
            <li>
              Be it further enacted, That Thomas Hudgins, <aside>Trustees</aside> James B. Taylor, J.B.
              Jeter, Henry Keeling, James Sizer, L.W. Allen, Albert Snead, William
              Sands, Jessee Snead, James Thomas junior, Richard Reins, Joseph Mosby,
              Elis Ball, Thomas Hume, Cumberland George, William H. Broaddus, Daniel
              Witt, A.M. Poindexter, Addison Hall, John D. M'Gill, Edmund Broaddus,
              George Alderson, James C. Jordan, William Southwood, Richard C.
              Wortham, Charles Hunton, John B. Young, Samuel Hardgrove, A. Thomas,
              A.G. Wortham, Lawson Burfoot, Samuel Taylor, John B. Clapton, Silas
              Wyatt, Joseph B. Turner, Peter Winston, and Henry L. Carter, be and
              are hereby constituted and appointed Trustees of said College, who,
              and their successors shall be a body politic and corporate <aside>style</aside> by the name
              of “The Trustees of Richmond College.” Who shall have perpetual
              succession and a common seal; <aside>Rights</aside> who shall be capable in law to possess,
              purchase, receive, and hold to them and their successors forever any
              lands, tenements, rents, goods, chattels or interests of any kind
              whatsoever, which may have already been given or may hereafter be
              given, or by them be purchased, for the use <PageNumber num={2} />
              of said college; and to dispose of the same in any way whatsoever,
              they shall judge most useful to the interests and legal purposes of
              the institution, to sue and be sued, plead and be impleaded in all
              courts of law and equity; and under their common seal to make and
              establish from time to time, such by-laws, rules and ordinances, not
              contrary to the Constitution and laws of this State or of the United
              States, as shall by them be thought essential to the good order and
              government of the Professors, Masters and Students of said college.
            </li>
            <li>
              Be it further enacted, That the said Trustees shall fix on some day,
              specified and <aside>officers how elected</aside> duly announced by publication in some newspaper
              published in the City of Richmond, for the election of a President,
              Professors and Masters of said College, such as they shall judge
              necessary for the purposes of the institution. <aside>President duties of</aside> The President shall
              preside in all meetings of the Board of Trustees and in his absence a
              president pro tem shall be elected from their own body; <aside>not to vote</aside> but in no case
              shall the President be entitled to a vote. The said President and
              Trustees, or any <aside>seven to be a quorum</aside> seven of them shall have full power and authority to
              meet at such times as they shall think necessary for the examination
              of any candidates for literary degrees, and they are hereby authorized
              and empowered to confer such degrees on <aside>Degrees</aside> such persons as in their
              opinion shall merit the same, in as ample a manner as any other
              college in this Commonwealth can do; and under their common seal to
              grant testimonials thereof, signed by the President and seven of the
              Trustees at least. <aside>How to get a quorum</aside>The President and seven Trustees shall form a
              quorum for business, and any less number may adjourn from day to day,
              or to any future day, until a quorum shall be had.
            </li>

            <li>
              Be it further enacted, That the said <PageNumber num={3} /><aside>Treasurer</aside>
              Trustees shall annually elect a Treasurer for said College, who shall
              give bond with approved security, payable to the Trustees and their
              successors conditioned faithfully to discharge the duties of his
              office, and shall render an account of all money's goods and chattels
              received and expended by him on account, and for the use of said
              College; and on failure or refusal to do so, shall be subject to the
              like proceedings as are prescribed by law in the case of Sheriffs
              failing to account for and pay into the Treasury of the Commonwealth
              the public taxes collected by them: such proceedings to be conducted
              in the name of the Trustees in their corporate and politic character
              aforesaid.
            </li>
            <li>
              <aside>officers how removed.</aside>Be it further enacted, That the said Trustees, or any seven of them,
              shall have power to remove or suspend the President or any of the
              Masters at any time, for good cause; and also, two thirds concurring
              to remove any of the Trustees for good cause, and to supply any
              vacancy so occasioned; and when any vacancy is occasioned by death,
              resignation removal or refusal to act, a quorum of the remaining
              Trustees shall supply the same. It shall also be lawful for the
              President or (in case of his death, resignation or refusal to act) the
              Professors and Masters for the time being, or a majority of them, <aside>Pres<sup>t</sup>. to call meetings</aside> to
              call a meeting of the Trustees when he or they as the case may be,
              shall deem it expedient.
            </li>
            <li>
              Be it further enacted, That the President and Trustees of said
              College, before they enter upon the duties of their office, shall
              severally take the following oath or affirmation; to be administered
              by justice of the peace of the County of Henrico, and by him certified
              to the court of said county, there to be entered of record <aside>Oath of office</aside>  &quot;I
              (A.B.) do swear (or affirm) that I will, to the best of my skill and
              judgment, discharge the duties required of me as a Trustee (or
              President) of Richmond College, according to the act of incorporation
              without <PageNumber num={4} />
              partiality, favor, or affection. So help me God.&quot;
            </li>
            <li>
              Be it further enacted, That there shall be <aside>meetings.</aside> annual stated meetings of
              the Board of Trustees, to be held at such time as their by-laws shall
              from time to time prescribe. <aside>No. of Trustees</aside>The number of Trustees shall never be
              less than twenty-four nor more than forty.  It shall be the duty of
              the Board of Trustees to make an annual report of the general
              condition of the college, to the <aside>An. Report to Legislature</aside>President and Directors of the
              Literary Fund, to be by them communicated to the General Assembly.
            </li>
            <li>
              <aside>no theology</aside> it further enacted, That nothing herein contained shall be so
              construed as to authorize the establishment of a Theological
              professorship in the said College.
            </li>
            <li>
              Be it further enacted, That whenever any Trustee shall absent himself
              from three successive annual meetings of the Board of Trustees,
              without assigning a sufficient reason, any seven of the Trustees shall
              have power, by entry on their minutes, to declare his <aside>seats how vacated</aside>seat vacant, and
              to proceed to the election of another Trustee to supply his place,
              according to the by-laws which the Board of Trustees may from time to
              time adopt.
            </li>
            <li>
              Be it further enacted, That the Board of Trustees be and are hereby
              authorized and empowered to contract and agree with <aside>Propert to be purchased.</aside>Richard C.
              Wortham, John T. Anderson, John S. Ellis, James Sizer, Archibald
              Thomas, Henry L. Carter, John G. Hull, Joseph Starke, James Thomas,
              Jr., Peter Winston, John Hitchcock, Jacob F. Barnes and William
              Carter, for the purchase and sale of the property now occupied as a
              Seminary of learning, near the City of Richmond, called Columbia
              together with the buildings and appurtenances there on and pertaining
              thereto, upon such terms and condition <PageNumber num={5} />
              as may be mutually agreed on by the Trustees aforesaid and the above
              named persons.
            </li>
            <li>
              Be it further enacted, That the said Trustees are hereby authorized,
              so far as their funds may warrant, to admit <aside>Gratuities.</aside>gratuitously, in whole or
              in part, as their respective cases may require, such person or persons
              as they may think proper.
            </li>
            <li>This act shall be in force from its passage.</li>
          </ol>
        </section>
        <section>
          <h2
            style={{
              textAlign: "center",
              borderBottom: "1px solid black",
            }}
          >
            By Laws
          </h2>
          <div
            className="pencil addition"
            style={{
              float: "right",
              textAlign: "right",
            }}
          >
            <Link to={`../63`}>page 124</Link>
            <br />
            <Link to={`../110`}>" 215</Link>
          </div>
          <h4>As amended 30th June 1853.</h4>
          <h4 className="addition pencil">Revised</h4>
          <ol style={{ listStyleType: "upper-roman" }}>
            <li>
              <h4
                style={{
                  borderBottom: "1px solid black",
                  textAlign: "center",
                }}
              >
                Officers of the Board
              </h4>
              <aside>Officers</aside>
              <p>
                The officers of the Board shall be a President, a Secretary, and a
                Treasurer. These shall be chosen by ballot. The Secretary and
                Treasurer shall be appointed at each annual meeting of the Board,
                but vacancies may be supplied at any other meeting.
              </p>
            </li>
            <li>
              <h4
                style={{
                  borderBottom: "1px solid black",
                  textAlign: "center",
                }}
              >
                The Duties of the Officers
              </h4>
              <ol>
                <li className="first">
                  <aside>Presidents Duty.</aside>
                  <h5
                    style={{
                      textAlign: "left",
                      textDecoration: "underline",
                    }}
                  >
                    of the President
                  </h5>
                  <p>
                    He shall provide at all meetings of the Board, but in case of
                    absence a President Pro tem, shall be appointed, the Rules of
                    decorum by which he shall be governed shall be the same with
                    those usually observed in deliberative assemblies (with the
                    exception of a tie vote, the President is prohibited by the
                    Charter of Richmond College from giving the casting vote).
                  </p>
                </li>
                <li className="second">
                  <aside>Secretary</aside>
                  <h5
                    style={{
                      textAlign: "left",
                      textDecoration: "underline",
                    }}
                  >ß‰
                    of the Secretary
                  </h5>
                  <p>
                    He shall keep a book or books, in which he shall legibly and
                    faithfully record all the <PageNumber num={6} />
                    proceedings of the Board, conduct the correspondence of the
                    Board, file and safely keep all documents committed to his care,
                    subject at all times to the inspection of the members of the
                    Board, but shall not deliver the same to any other, than to an
                    agent authorized by the Board to receive them.
                  </p>
                  <p>
                    The record of the proceedings of each meeting of the Board shall
                    be signed by the President and countersigned by the Secretary.
                  </p>
                </li>
                <li className="third">
                  <aside>Treasurers Duties</aside>
                  <h5
                    style={{
                      textAlign: "left",
                      textDecoration: "underline",
                    }}
                  >
                    The Treasurer
                  </h5>
                  <ol style={{ listStylePosition: "inside" }}>
                    <li className="first">
                      For all monies received by him on account of this Board, he
                      shall give a receipt, and his receipt shall be deemed valid by
                      this Board.
                    </li>
                    <li className="second">
                      He shall pay no monies till the same shall have been ordered
                      by the Board.
                    </li>
                    <li className="third">
                      He shall keep a regular account of all monies stocks, bonds
                      and other effects in his hands or subject to his control;
                      which shall be balanced at least once a year, of which a full
                      statement shall be made at the Annual Meeting of the Board. He
                      shall also submit a sketch of the State of the finances at the
                      quarterly meetings.
                    </li>
                    <li className="fourth">
                      His books shall be open at all times to the inspection of the
                      Board, or their committee, and before he enters on the duties
                      of his office, he must give bond and security for the faithful
                      performance of his duties in the amount of $5000 dollars,
                      which bond when approved by the Board, shall be deposited with
                      the Secretary.
                    </li>
                  </ol>
                </li>
              </ol>
            </li>
            <li style={{ listStyle: "none" }}>
              <h4>Meetings of Board</h4>
              <aside>Meetings</aside>
              <p>
                The annual meeting of the Board shall be held on the Tuesday
                succeeding the first Sunday in June, in the City of Richmond -- at
                each Annual meeting the records of the preceding year shall be read,
                an auditing committee, consisting of two members shall be appointed
                and a full report of the condition of the College shall be submitted
                by the Faculty.
              </p>
              <PageNumber num={7} />
              <p>
                There shall also be quarterly meetings of the Board, on the Tuesday
                after the first Sunday in September, December &amp; March; and a
                meeting may be called at any time by the President when he or any
                two members may judge it proper. Due notice of all meetings shall be
                given in the <cite>Religious Herald</cite>or some newspaper
                published in the City of Richmond.
              </p>
              <h5>Manner of becoming bound by Contract or otherwise</h5>
              <p>
                The Board can become bound by Contract, Deed, Bond or other legal
                obligation only in the following manner,
              </p>
              <ol style={{ listStylePosition: "inside" }}>
                <li className="first">
                  The obligations shall originate in a vote of the Board, in one of
                  its meetings.
                </li>
                <li className="second">
                  The document or documents requisite in the case shall be signed by
                  the President or the President pro tem, and countersigned by the
                  Secretary, with the seal of the Board affixed thereto.
                </li>
              </ol>
            </li>
          </ol>
        </section>
        <div className='explanation'>[Page 8 is blank]</div>
        <PageNumber num={9} />
        <section id='meeting-1841-02-11'>
          <aside>First meeting of the Board.</aside>
          <p>
            According to previous notice a meeting of the Trustees of Richmond
            College was held in the City of Richmond on
            <time dateTime="1841-02-11"><u>Wednesday February 11th, 1841</u></time>. The Board was ascertained to be
            legally organized by the oath of office being taken by the following
            gentlemen, To wit. James B. Taylor, J.B. Jeter, Henry Keeling, L.W.
            Allen, Jessee Snead, William Sands, James Sizer, James Thomas, Jr.,
            Richard Reins, Eli Ball, Joseph Mosby, John D. M'Gill, John B. Young,
            Albert Snead, Edmund Broaddus, Silas Wyatt, Richard C. Wortham, Charles
            Hunton, Samuel Hardgrove, A. Thomas, A.G. Wortham, Samuel Taylor, Peter
            Winston, Henry L. Carter and Joseph B. Turner.
          </p>
          <p>
            Mr. Jessee Snead was called to the chair, and L.W. Allen appointed
            secretary of the meeting.
          </p>
          <div style={{ textAlign: 'center' }}>Prayer by William F. Nelson</div>
          <p>
            On motion the Board proceeded to the appointment of officers whereupon
            the following gentlemen were elected,
          </p>
          <div
            style={{
              display: "grid",
              gridTemplateColumns: "1fr 1fr",
              justifyItems: "center",
            }}
          >
            <aside>officers.</aside>
            <div>Henry Keeling</div>
            <div>President</div>
            <div>James Thomas, Jr.</div>
            <div>Treasurer</div>
            <div>James B. Taylor</div>
            <div>Secretary</div>
          </div>
          <aside>JC Crane elected Trus</aside>
          <p>
            Mr. John B. Clopton having declined the office of Trustee, on motion Mr.
            James C. Crane was appointed to fill the vacancy.
          </p>
          <aside>EL Magoon elected Trustee</aside>
          <p>
            Mr. E.L. Magoon was elected to supply the vacancy occasioned by the
            declination of Mr. Lawson Burfoot.
          </p>
          <aside>Com. on Bylaws</aside>
          <p>
            Messrs. Keeling, Taylor and Jeter were appointed a committee to prepare
            a code of bylaws to report to the Board.
          </p>
          <aside>do on Agency.</aside>
          <p>
            Messrs. A. Thomas, Jessee Snead and William Sands were appointed a
            committee to recommend a suitable Agent to collect funds for the
            College.
          </p>
          <p>
            Mr. James B. Taylor on behalf of the Virginia Baptist
            <PageNumber num={10} />
            Society presented a proposition to transfer to this Board the property
            held by them, and styled Columbia agreeable to certain resolutions
            adopted by them.  To wit.
          </p>
          <aside>Terms of transfer of Columbia property</aside>
          <ol style={{ listStyleType: "upper-roman" }}>
            <p>
              Resolved.  That the property now held by Richard C. Wortham and others
              in trust for the Virginia Baptist Education Society known as the
              Baptist Seminary be tendered to the Trustees of Richmond College on
              the following conditions.  To wit.
            </p>
            <ol>
              <li>
                The Trustees of said College shall admit to instruction in all the
                College classes all ministers and candidates for the ministry of the
                Baptist Denomination who may be recommended by the said Society or
                its Board of managers free from all charges except for boarding and
                in all other respects on terms of equality with other students
                forever.
              </li>
              <li>
                In the event that the Trustees of said College should deem it either
                impracticable or inexpedient to continue the Institution in
                existence or should fail to fulfil the stipulation in the first
                article of this agreement, the property or its estimated value,
                $20,000, shall be reconveyed to Richard C. Wortham and others or
                their successors to be by them held in trust for the said Education
                Society
              </li>
              <li>
                When any vacancy or vacancies shall occur in the Board of Trustees
                of said College, such vacancy or vacancies shall be filled from a
                list of not less than ten persons named by the said Education
                Society, provided the Society shall duly furnish the Trustees with
                such a list of names.
              </li>
              <li>
                These stipulations shall be inserted in the deed of conveyance from
                the said Richard C. Wortham and other Trustees of the Education
                Society, to the Trustees of said College.
                <PageNumber num={11} />
              </li>
              <li>
                Trustees Richard C. Wortham and others, shall be authorized to
                transfer the aforesaid property to the incorporated Board when they
                shall have obtained a permanent endowment of $50,000.
              </li>
            </ol>
            <li>
              Resolved.  That a committee consisting of James B. Taylor, V. M. Mason
              and L. W. Allen be appointed to present this proposal to the Trustees
              of Richmond College and report to the Board.
            </li>
          </ol>
          <p>The conditions of transfer were for the present laid on the table.</p>
          <aside>Committe on College Seal</aside>
          <p>
            Messrs. Allen and Mosby and Young were appointed a committee to procure
            a suitable design to be used as a common seal.
          </p>
          <p>On motion adjourned</p>
          <div>Jessee Snead, Chairman</div>
          <div>L. W. Allen Scty.</div>
        </section>

        <section id='meeting-1841-06-08' className='annual'>
          <aside>First Annual Meeting</aside>
          <p>
            The Trustees of Richmond College met in the town of Charlottesville
            according to previous appointment on <time dateTime="1841-06-08">Thursday the 8th of June 1841</time>.
          </p>
          <aside>Present</aside>
          <p>
            Present: Jessee Snead, J. B. Jeter, Eli Ball, Wm. Southwood, James
            Thomas, L. W. Allen, A. Thomas, C. George, Wm. Sands, A. Hall, Thomas
            Hume, James Sizer, James C. Crane and James B. Taylor.
          </p>
          <p>Addison Hall was appointed President pro tempore - </p>
          <p>The meeting was opened by prayer by C. George.</p>
          <p>The minutes of the last meeting were read.</p>
          <p>
            The Committee to prepare a draft of bylaws not being ready to report
            were on motion continued.
          </p>
          <p>The Committee to prepare a common seal were also continued. </p>
          <p>
            On motion, the Secretary was directed to obtain a blank book in which
            all the proceeding of this Board are to be recorded.
          </p>
          <aside>H. Keeling delines the office of President See Doc No 1.</aside>
          <p>
            A communication declining the acceptance of President of the Board, in
            consequence of feeble health from Mr. H. Keeling was read, Whereupon on
            motion <PageNumber num={12} />
            the Board proceeded to the election of President.
          </p>
          <aside>R. Ryland elected President <span className='pencil'>See page 31</span></aside>
          <p>
            Robert Ryland being nominated, was duly appointed President of Richmond
            College.
          </p>
          <p>
            The Committee to procure the services of a General Agent reported. After
            some conversation, the Committee was continued.
          </p>
          <p>On Motion adjourned</p>
          <div>Jas. B. Taylor, Sec. -</div>
        </section>

        <section id='meeting-1841-07-06'>
          <p>
            The Trustees of Richmond College met at the Basement room of the Second
            Baptist Church on the <time dateTime="1841-07-06">6th of July 1841</time>.
          </p>
          <p>
            Present Robert Ryland, President, J.B. Jeter, E. L. Magoon, Jessee
            Snead, Albert Snead, Wm. Sands, Silas Wyatt and James B. Taylor.
          </p>
          <p>Prayer by E.L. Magoon</p>
          <p>
            The Committee to prepare By-laws not being prepared to report were on
            motion continued.
          </p>
          <p>
            The Committee to prepare a suitable design to be used as a common seal
            not being ready to report it was on motion continued.
          </p>
          <p>The Committee to procure a suitable Agent reported.</p>
          <aside>JB Taylor appointed Agent</aside>
          <p>
            Resolved That James B. Taylor be appointed agent to collect funds for
            the Board, and that he be compensated at the rate of $1,000 per annum
            for the time employed with his necessary travelling and postage
            expenses.
          </p>
          <aside>Com. to see 3<sup>d</sup> Church</aside>
          <p>
            Resolved That a Committee consisting of J. B. Jeter, R. Ryland, &amp; E.
            L. Magoon be appointed to confer with the third church of which Mr.
            Taylor is pastor explaining the nature of his appointment and requesting
            their coincidence.
          </p>
          <aside>To draft a Plan of subscript<sup>s</sup>.</aside>
          <p>
            Resolved That a Committee consisting of J.B. Jeter, A. Thomas and Jessee
            Snead be appointed to draft a <PageNumber num={13} />
            for obtaining subscriptions for Richmond College to be submitted to the
            Board.
          </p>
          <p>On motion adjourned to meet at 5 o'clock Monday afternoon </p>
          <footer
            style={{
              display: "grid",
              gridTemplateColumns: "1fr 1fr",
              justifyItems: "center",
